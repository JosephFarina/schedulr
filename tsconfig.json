{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "preserveConstEnums": true,
    "removeComments": true,
    "baseUrl": "./",
    "paths": {
      "src/*": [
        "./src/*"
      ]
    },
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "suppressImplicitAnyIndexErrors": true
  },
  "exclude": [
    "node_modules",
    "typings/browser.d.ts",
    "typings/browser"
  ]
}